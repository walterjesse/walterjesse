    "version": "0.2.0",
      "configurations": [
        {
          "type": "chrome",
          "request": "launch",
          "name": "Launch HTML File",
          "file": "${workspaceFolder}/${input:htmlFile}"
        }
      ],
      "inputs": [
        {
          "type": "pickString",
          "id": "htmlFile",
          "description": "Select the HTML file to debug",
          "options": [
            "blog-single-with-sidebar.html",
            "home-regular-menu.html"
          ]
        }
      ]
}